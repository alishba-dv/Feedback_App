<.flash_group flash={@flash} />

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sign Up</title>
</head>
<body style="
  margin: 0;
  padding: 0;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
">

<section style="
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
">
  <div style="
    background-color: #ffffff;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    padding: 2rem 2.5rem;
    border-radius: 16px;
    max-width: 500px;
    width: 100%;
    margin-top: 50px;
  ">

    <h2 style="
      text-align: center;
      margin-bottom: 10px;
      font-size: 30px;
      color: #333;
      font-weight: bold;
    ">
      Sign Up
    </h2>

    <form action="/signup" method="post" style="
      display: flex;
      flex-direction: column;
      margin-top: 30px;
    ">
      <input 
        type="hidden" 
        name="_csrf_token"       
        value={Plug.CSRFProtection.get_csrf_token()}
      />
      
      <label for="name" style="margin-bottom: 6px; font-weight: bold; font-size: 14px;">
        Name
      </label>

      <input value={@changeset.changes[:name] || @changeset.data.name || ""}
       type="text" name="user[name]" id="name" placeholder="Enter your name" style="
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 14px;
      ">

      <label for="email" style="margin-bottom: 6px; font-weight: bold; font-size: 14px;">
        Email
      </label>
      <input value={@changeset.changes[:email] || @changeset.data.name || ""}  type="email" name="user[email]" id="email" placeholder="Enter your email" style="
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 14px;
      ">
<%= if @changeset.action && @changeset.errors[:email] do %>
      <p style="color:red;"><%= elem(@changeset.errors[:email], 0) %></p>
    <% end %>

    
      <label for="password" style="margin-bottom: 6px; font-weight: bold; font-size: 14px;">
  Password
</label>
<div style="position: relative;">
  <input id="password" type="password" />

  <!-- Eye Icon Button -->
  <button type="button" onclick="togglePassword()" style="
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    font-size: 16px;
  ">
    <span id="eye-icon">ğŸ‘ï¸</span>
  </button>
</div>

<script>
  function togglePassword() {
    const passwordInput = document.getElementById("password");
    const eyeIcon = document.getElementById("eye-icon");

    if (passwordInput.type === "password") {
      passwordInput.type = "text";
      eyeIcon.textContent = "ğŸ™ˆ"; // Eye closed
    } else {
      passwordInput.type = "password";
      eyeIcon.textContent = "ğŸ‘ï¸"; // Eye open
    }
  }
</script>

 

      
<%= if @changeset.action && @changeset.errors[:password] do %>
      <p style="color:red;"><%= elem(@changeset.errors[:password], 0) %></p>
    <% end %>
      <button type="submit" style="
        padding: 10px;
        background-color: #007BFF;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: bold;
      ">
        Sign Up
      </button>
    </form>
    <p style="margin-top: 20px; text-align: center; font-size: 14px;">
        Already have an account?
        <a href="/login" style="color: #007BFF; text-decoration: none;">Login here</a>
      </p>

  </div>
</section>
</body>
</html>
